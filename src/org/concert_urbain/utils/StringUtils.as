package org.concert_urbain.utils{		public class StringUtils	{			public static function rtrim(p_string:String):String {			var i:int = p_string.length;			while (i--) {				if (p_string.charCodeAt(i)>32) {					return p_string.substring(0, i+1);				}			}			return "";		}				public static function ltrim(p_string:String):String		{			var i:int = -1, l:int = p_string.length;			while (i++<l) {				if (p_string.charCodeAt(i)>32) {					return p_string.substring(i);				}			}			return "";		}				public static function trimWhiteSpace(p_string:String):String {			return StringUtils.rtrim(StringUtils.ltrim(p_string));		}				public static function formatChrono(val:Number):String		{			if (val == 0)			{				return "00";			}			else if (val < 10)			{				return "0"+val.toString();			}			else if (val < 100)			{				return val.toString();			}			else			{				// Au cas où va > 100...				return Math.floor(val/100).toString()			}		}				public static function sansAccent(p_str:String):String {			//			var i:int, n:int = p_str.length-1;			var vNewString:String = new String("");			var vChar:String, vLowerChar:String, vIsLower:Boolean;			//			for (i=0; i<=n; i++) {				//				vChar = p_str.charAt(i);				vLowerChar = vChar.toLowerCase();				vIsLower = vChar == vLowerChar;				// 				if (String("àáâãäå").indexOf(vLowerChar)>=0) {					vChar = "a";				} else if (String("èéêë").indexOf(vLowerChar)>=0) {					vChar = "e";				} else if (String("ìíïî").indexOf(vLowerChar)>=0) {					vChar = "i";				} else if (String("ðòóôõö").indexOf(vLowerChar)>=0) {					vChar = "o";				} else if (String("ùúüû").indexOf(vLowerChar)>=0) {					vChar = "u";				} else if (String("ýÿ").indexOf(vLowerChar)>=0) {					vChar = "y";				} else if (String("ñ").indexOf(vLowerChar)>=0) {					vChar = "n";				} else if (String("ç").indexOf(vLowerChar)>=0) {					vChar = "c";				} else if (String("ž").indexOf(vLowerChar)>=0) {					vChar = "z";				} else if (String("š").indexOf(vLowerChar)>=0) {					vChar = "s";				}				vNewString += vIsLower ? vChar : vChar.toUpperCase();			}			return vNewString;		}			}}