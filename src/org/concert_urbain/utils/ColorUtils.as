package org.concert_urbain.utils{		import flash.display.Sprite;	import flash.geom.ColorTransform;		public class ColorUtils	{			public static function setColorTransform(sprite:Sprite, color:uint, percent:Number = 0):void		{			var r:Number = color >> 16 & 0xFF;			var v:Number = color >> 8 & 0xFF;			var b:Number = color & 0xFF;						sprite.transform.colorTransform = new ColorTransform(percent, percent, percent, 1, r, v, b);		}	}}