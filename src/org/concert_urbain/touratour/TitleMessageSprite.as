package org.concert_urbain.touratour{	import flash.display.Graphics;	import flash.display.CapsStyle;	import flash.display.JointStyle;	import flash.display.LineScaleMode;	import flash.display.Sprite;	import flash.events.MouseEvent;	import flash.filters.BitmapFilterQuality;	import flash.filters.GlowFilter;	import flash.geom.Point;		import gs.*;	import gs.easing.*;		import org.concert_urbain.cfacom.PersoTitle;	import org.concert_urbain.utils.PersoGraphicTools;			public class TitleMessageSprite extends MessageSprite	{			protected var mySun:Sprite;		protected var title:PersoTitle;			public function TitleMessageSprite(){						super();						addMouseEvents();						//GET SUN			mySun = PersoGraphicTools.createSun();			addChild(mySun);						//reset pos sun			mySun.x = 10;			mySun.y = mySun.height/4;						//GET TITLE			title = new PersoTitle();			addChild(title);						toggleFeedback(false);		}				public function addMouseEvents():void {			addEventListener(MouseEvent.MOUSE_OVER, rollOver, false, 1, true);			addEventListener(MouseEvent.MOUSE_OUT, rollOut, false, 1, true);		}				public function removeMouseEvents():void {			removeEventListener(MouseEvent.MOUSE_OVER, rollOver);			removeEventListener(MouseEvent.MOUSE_OUT, rollOut);		}				public function getTitle():PersoTitle{	return title;	}				public function toggleFeedback(flag:Boolean):void{			mySun.visible = title.visible = flag;		}				public function rollOver(e:MouseEvent):void{						//Montre le soleil et le titre du média			toggleFeedback(true);		}				public function rollOut(e:MouseEvent):void{			toggleFeedback(false);		}	}}