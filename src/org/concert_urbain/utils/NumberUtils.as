package org.concert_urbain.utils{	public class NumberUtils	{			//		// Retourne une chaine hexa ("#FF00FF") à partir d'une valeur color (rgb-color)		//				public static function getHexaStringColor(p_number:Number):String {			var string:String = p_number.toString(16);			var result:String = "#";			var zero_array:Array = new Array("", "0", "00", "000", "0000", "00000", "000000");			return String(result+zero_array[6-string.length]+string).toUpperCase();		}				//		// Retourne une chaine d'un nombre 'formaté' avec n décimales (12.30 avec n =2)		//				public static function formatNumber(p_number:Number, p_precision:Number):String {			//			var dix:Number = Math.pow(10, p_precision);			var new_number:Number = Math.round(p_number*dix)/dix;			var tmp_array:Array = new_number.toString().split(".");			var partInt:String = tmp_array[0];			//			if (p_precision == 0) {				return partInt;			} else {				//				var parFract:String = tmp_array[1] == undefined ? "" : tmp_array[1];				//						if (parFract.length>p_precision) {					parFract = parFract.substr(0, p_precision);				} else if (parFract.length<p_precision) {					// On ajoute autant de zéros que nécessaire					while (parFract.length<p_precision) {						parFract = parFract+"0";					}				}				return (partInt+"."+parFract);			}		}	}}