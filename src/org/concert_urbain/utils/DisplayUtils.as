package org.concert_urbain.utils{	public class DisplayUtils {				import flash.display.*;				public function DisplayUtils()		{		}		public static function removeAllChildren(d:DisplayObjectContainer):void		{				while (d.numChildren > 0)			{				d.removeChildAt(0);			}		}				public static function addGraphicsCross(s:Sprite, color:uint = 0x000000, size:Number = 10):void		{				var g:Graphics = s.graphics;						g.lineStyle(0, color);						g.moveTo(-size, 0);			g.lineTo(size, 0);						g.moveTo(0, -size);			g.lineTo(0,  size);		}	}}